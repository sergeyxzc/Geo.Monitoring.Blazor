@page "/project/{ProjectId:int}"
@inherits Geo.Monitoring.Blazor.Components.Common.BaseBusyApplicationComponent

<div class="h5 d-flex flex-column text-muted">
    <p>Project: @ViewModel.Project.Name</p>
</div>

<div class="my-1">
    <DxTabs>
        <DxTabPage Text="Project">
            <div class="mt-3">
                <ProjectDetails ViewModel="@ViewModel.ProjectDetails"></ProjectDetails>
            </div>
        </DxTabPage>
        <DxTabPage Text="Loggers" TabIconCssClass="tabs-icon-products tabs-icon"></DxTabPage>
        <DxTabPage Text="Employees" TabIconCssClass="tabs-icon-support tabs-icon"></DxTabPage>
    </DxTabs>
</div>